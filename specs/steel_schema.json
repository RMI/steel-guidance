{
  "$id": "https://github.dev/RMI/steel-guidance/blob/main/samples/steel_sample.json",
  "$schema": "https://github.com/RMI/steel-guidance/blob/main/specs/steel_schema.json",
  "title": "PACT RMI Steel Extension Schema",
  "description": "A Pathfinder Data Model Extension for sharing information emissions data in steel production.",
  "$defs": {
    "mineToSmelter": {
      "type": "object",
      "properties": {
        "productDescription": {"type": "string"},
        "productDeclaredUnit": {"type": "string"},
        "mineToSmelterGhgEmissions": {"type": "number"},
        "GeographyCountrySubdivision": {"type": "string"},
        "GeographyCountry": {"type": "string"},
        "GeographyRegionOrSubregion": {"type": "string"}
      },
      "required": ["mineToSmelterProductDescription","mineToSmelterGhgEmissions","mineToSmelterGeographyCountry"]
    },
    "valueAddedProduct": {
      "type": "object",
      "properties": {
        "productDescription": {"type": "string"},
        "productDeclaredUnit": {"type": "string"},
        "ghgEmissionsCutoff": {"type": "number"},
        "ghgEmissionsAllocation": {"type": "number"},
        "scrapBasedShare": {"type": "number"},
        "postConsumerScrapBasedShare": {"type": "number"}
      },
      "required": ["productDescription","ghgEmissionsCutoff","ghgEmissionsAllocation","scrapBasedShare","postConsumerScrapBasedShare"]
    }, 
    "benchmarking": {
      "type": "object",
      "properties":{
        "referencePeriodStart": {"type": "date-time"},
        "referencePeriodEnd": {"type": "date-time"},
        "mineToSmelter": {
          "type": "object",
          "items": {"$ref": "#/$defs/mineToSmelter"}
        },
        "valueAddedProduct": {
          "type": "object",
          "items": {"$ref": "#/$defs/valueAddedProduct"}
        },
        "required": ["referencePeriodStart","referencePeriodEnd","mineToSmelter"]
      }
    },
    "fullBoundary": {
      "type": "object",
      "properties": {
        "referencePeriodStart": {"type": "date-time"},
        "referencePeriodEnd": {"type": "date-time"},
        "productDescription": {"type": "string"},
        "productDeclaredUnit": {"type": "string"},
        "productAmount": {"type": "number"},
        "fullBoundaryGhgEmissions": {"type": "number"},
        "geographyCountrySubdivision": {"type": "string"},
        "geographyCountry": {"type": "string"},
        "geographyRegionOrSubregion": {"type": "number"}
      },
      "required": ["referencePeriodStart","referencePeriodEnd","productDescription","productDeclaredUnit","productAmount","fullBoundaryGhgEmissions","geographyCountry"]
    }
  },
  "type": "object",
  "properties": {
    "benchmarkingFootprint": {
      "type": "object",
      "items": {"$ref": "#/$defs/benchmarking"}
      },
    "fullBoundary": {
      "type": "object",
      "items": {"$ref": "#/$defs/fullBoundary"}
      }
       
  },
  "required": ["benchmarkingFootprint"]
}
